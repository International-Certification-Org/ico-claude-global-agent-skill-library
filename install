#!/usr/bin/env bash
#
# Install icgasl command for ICO Claude Global Agents & Skills Library
#
# Usage:
#   curl -fsSL .../install | bash              # Interactive
#   curl -fsSL .../install | bash -s -- --user   # User install
#   curl -fsSL .../install | bash -s -- --global # Global install (sudo)

set -euo pipefail

ICGASL_URL="https://raw.githubusercontent.com/International-Certification-Org/ico-claude-global-agent-skill-library/main/icgasl"
USER_BIN="$HOME/.local/bin"
GLOBAL_BIN="/usr/local/bin"

# Parse arguments
CHOICE=""
for arg in "$@"; do
  case "$arg" in
    --user) CHOICE="1" ;;
    --global) CHOICE="2" ;;
  esac
done

# Interactive if no argument
if [ -z "$CHOICE" ]; then
  echo "ICO Claude Global Agents & Skills Library - Install"
  echo ""
  echo "  [1] User install   - ~/.local/bin/icgasl (current user only)"
  echo "  [2] Global install - /usr/local/bin/icgasl (all users, requires sudo)"
  echo ""
  read -p "Choose [1/2]: " -n 1 -r </dev/tty 2>/dev/null || CHOICE="1"
  CHOICE="${REPLY:-1}"
  echo ""
fi

if [[ $CHOICE == "2" ]]; then
  # Global install
  echo "Installing globally (requires sudo)..."
  sudo curl -fsSL "$ICGASL_URL" -o "$GLOBAL_BIN/icgasl"
  sudo chmod +x "$GLOBAL_BIN/icgasl"
  echo ""
  echo "Installed to $GLOBAL_BIN/icgasl"
else
  # User install
  mkdir -p "$USER_BIN"
  curl -fsSL "$ICGASL_URL" -o "$USER_BIN/icgasl"
  chmod +x "$USER_BIN/icgasl"
  echo ""
  echo "Installed to $USER_BIN/icgasl"

  # Check if ~/.local/bin is in PATH
  if [[ ":$PATH:" != *":$USER_BIN:"* ]]; then
    echo ""
    echo "NOTE: Add ~/.local/bin to your PATH:"
    echo "  echo 'export PATH=\"\$HOME/.local/bin:\$PATH\"' >> ~/.bashrc"
    echo "  source ~/.bashrc"
  fi
fi

echo ""
echo "Usage:"
echo "  icgasl         - Install/update agents & skills"
echo "  icgasl --help  - Show help"
